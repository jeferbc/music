<div class="container">
  <div class="col-md-8">
    <div class="row">
      <% @albums.each do |album|  %>
        <div class="col-sm-5 col-md-3">
          <div class="thumbnail">
            <img src="<%= album.image_url %>" alt="" />
            <div class="caption">
              <h3><%= album.name %></h3>
              <h4><%= album.released_at %></h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <img src="<%= @artist.image_url %>" alt="" />
  </div>
</div>
